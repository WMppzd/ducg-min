/* pages/lore/lore.wxss */
.ls_search {
    padding-bottom: 8px;
    padding-top: 8px;
    background-color: whitesmoke;
    width: 100vw;
}

.ls_no_more {
    background-color: white;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.ls_no_img{
    width: 50vw;
    height: 50vw;
}

.lore_item_v {
    padding: 8rpx 16rpx;
    background-color: white;
    border-bottom-color: gainsboro;
    border-bottom-width: 1px;
    border-bottom-style: solid;
}

.lore_item_h {
    display: flex;
    align-items: center;
}

.lore_item_hover {
    background-color: #eeeeee;
}

.lore_item_inner {
    display: flex;
    flex-direction: column;
    padding: 8rpx 24rpx;
    flex: 1;
}

.lore_item_thumb {
    width: 120rpx;
    height: 120rpx;
    border-radius: 8rpx;
}

.lore_item_title {
    font-size: large;
}

.lore_item_desc {
    font-size: small;
    color: #7b7b7b;
    display: -webkit-box;
    line-height: 40rpx;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    text-overflow: ellipsis;
}

.lore_item_datetime {
    color: gainsboro;
    font-size: xx-small;
    text-align: right;
}

.lore_zero {
    /*height: 100%;*/
}


.lore_item_nomore {
    display: block;
    text-align: center;
    padding: 24rpx;
}

.lore_one {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 8rpx 24rpx;
}

.ln_logo {
    width: 100%;
    height: 200rpx;
    padding: 48rpx;
}

.ln_desc {
    text-align: center;
    margin-bottom: 48rpx;
}

