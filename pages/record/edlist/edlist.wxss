/* pages/edlist/edlist.wxss */

.edlist_item_root {
    display: flex;
    align-items: center;
    padding: 16px 8px;
    border-bottom-width: 1px;
    border-bottom-style: solid;
    border-bottom-color: lightgray;
}

.edlist_item_root_ex {
    background-color: #3ec93e;
    color: white;
    width:calc(100vw - 16px);
}

.edlist_item_id {
    flex: 1;
    text-align: center;
}

.edlist_item_name {
    flex: 1;
    text-align: center;
}

.edlist_item_sub {
    display: flex;
    flex: 3;
    flex-direction: column;
}

.edlist_item_disease {
    flex: 3;
    color: #ffffff;
    text-align: center;
}

.edlist_item_disease_v {
    flex: 3;
    color: #3cc51f;
    text-align: center;
}

.edlist_item_datetime {
    flex: 2;
    text-align: center;
}

.edlist_item_state_finish {
    flex: 2;
    text-align: center;
    color: #3cc51f;
}

.edlist_item_state_doing {
    flex: 2;
    text-align: center;
}

.edlist_item_nomore {
    display: block;
    text-align: center;
    padding: 24rpx;
}
