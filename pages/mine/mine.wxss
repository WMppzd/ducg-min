/* pages/mine/mine.wxss */

.mine_cell {
    width: 20px;
    height: 20px;
    margin-right: 16px;
    vertical-align: middle;
}

.mine_user {
    background-color: #3ec93e;
    padding: 32rpx;
    display: flex;
    align-items: center;
}

.mine_user_hover {
    background-color: #1d721d;
}

.mine_text {
    display: flex;
    padding: 0rpx 32rpx;
    flex-direction: column;
    flex: 1;
    justify-content: center;
}

.mine_avatar {
    width: 120rpx;
    height: 120rpx;
    border-radius: 60rpx;
}

button {
    width: 100% !important;
    padding: 0 0 !important;
    margin: 0 0 !important;
    text-align: left !important;
    background: none;
    border-radius: 0;
    font-weight: normal !important;
}

button::after {
    border: none;
}