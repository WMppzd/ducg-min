/* component/lookbar.wxss */
.lookbar-container{
    width: 100%;
    height: 130rpx;
    position: fixed;
    bottom: 0rpx;
    left: 0;
    background-color: #fff;
    border-top: 1px solid #ccc;
    display: flex;
    font-size: 26rpx;
    justify-content: space-between;
    padding: 0 16rpx;
    box-sizing: border-box;
}
.lookbar-box{
    height: 100rpx;
    align-items: center;
    display: flex;
}
.lookbar-img{
    width: 36rpx;
    height: 36rpx;
    margin-right: 10rpx;
}