.expertLists{
    padding: 10px;
}
.expertLists_item{
    display: flex;
    border:1px solid red;
    position: relative;
}
.expertLists_item_img{
    flex: 1;
}
.expertLists_item_img_detail{
    position: absolute;
    bottom: 0;
    background: red;
    color: #fff;
    width: 100px;
    text-align: center;
    filter: opacity(0.5);
}
.expertLists_item_right{
    flex: 2;
    padding: 10px 0;
    font-size: 12px;
}
.expertLists_cell{
    width: 100px;
    height: 100px;
    margin-right: 16px;
    vertical-align: middle;
}
.expertLists_item_right_number{
    margin-bottom: 10px;
}
.expertLists_item_right_expert{
    margin-bottom: 10px;
}
.expertLists_item_right_title{
    font-weight: 700;
    margin-bottom: 10px;
}
.expertLists_item_right_content{

}
.expertLists_expertLists_detail{
    padding: 10px;
    text-align: center;
}

.personal_content{
    margin-top: 20px;
    border: 1px solid #ccc;
    padding: 10px;
    border-radius: 5px;
}